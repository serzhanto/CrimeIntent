<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/crime_list_is_empty"
            android:textColor="@color/text"
            android:id="@+id/label_add_new_crime" android:layout_gravity="center" android:textSize="40dp"
            android:layout_marginBottom="50dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_crime"
            android:id="@+id/button_add_new_crime" android:layout_gravity="center" android:layout_marginTop="50dp"/>
</FrameLayout>
